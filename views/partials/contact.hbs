<div>
  <section id="contact">
    <p class="section__text__p1">Get in Touch</p>
    <h1 class="title">Contact Me</h1>
    <div class="contact-info-upper-container">
      <div class="contact-info-container">
        <img
          src="/images/icons/email.png"
          alt="Email icon"
          class="icon contact-icon email-icon"
        />
        <p>
          <a class="underline" href="mailto:examplemail@gmail.com"
            >Send me an Email</a
          >
        </p>
      </div>
      <div class="contact-info-container">
        <img
          src="/images/icons/linkedin.png"
          alt="LinkedIn icon"
          class="icon contact-icon"
        />
        <p>
          <a
            class="underline"
            href="https://www.linkedin.com/in/shreyash-hamal/"
            >LinkedIn</a
          >
        </p>
      </div>
    </div>
    <div>
      <p>Or Leave a message</p>
    </div>
    <div>
      <form action="/contacted" method="post" id="form">
          <input type="text" id="firstName" name="firstName" placeholder="First Name"/>
          <input type="text" id="lastName" name="lastName" placeholder="Last Name"/>
          <input type="text" id="email" name="email" placeholder="Email"/>
          <textarea name="message" id="msg" placeholder="Enter Your Message"></textarea>
          <input type="submit" value="Send Message!" />
      </form>
    </div>
  </section>
</div>
